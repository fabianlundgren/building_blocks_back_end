.base
  %h4 Add user
  = @code
  %br/
  = form_for(:user, :url => {:controller => 'user', :action => 'create'}) do |f|
    .field
      = f.label :first_name
      %br/
      = f.text_field :first_name
    .field
      = f.label :last_name
      %br/
      = f.text_area :last_name
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true
    .field
      = f.label :role
      %br/
      = f.select :role, ['tenant','jani']
    .field
      - f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.hidden_field :password, autocomplete: "off", value: @code
    .field
      - f.label :password_confirmation
      %br/
      = f.hidden_field :password_confirmation, autocomplete: "off", value: @code
    .actions
      = f.submit "Sign up", class: 'round button'
      %br/
      %br/
      = link_to 'Manage users', user_index_path, class: 'round button'

