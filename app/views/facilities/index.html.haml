.base
  %h3 Facilities
  .nisse
    = link_to 'New Facility', new_building_facility_path(@building), class: 'round button'
  %br
  %br
  .row
    - @facilities.each do | facility |
      .large-4.medium-4.columns
        .card
          .newh
            = facility.name
        = facility.description
        %br
        %br
        = link_to "Manage timeslots", building_facility_path(@building, facility.id), class: 'button tiny inc'
        = link_to "Manage facility", edit_building_facility_path(@building, facility.id), class: 'button tiny inc'
        = link_to 'Manage bookings', building_facility_bookings_path(@building,facility.id), class: 'button tiny inc'
        = link_to "Delete", "/buildings/#{session[:current_building_id]}/facilities/#{facility.id}", method: :delete, class: 'button tiny alert'
